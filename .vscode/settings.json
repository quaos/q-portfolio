{
    "deno.config": "./tsconfig.json",
    "deno.enable": true,
    "deno.unstable": true,
    "deno.lint": true,
    "deno.suggest.imports.hosts": {
        "https://esm.sh": true,
        "https://deno.land": true,
        "http://esm.sh": false
    },
    "typescript.format.enable": true,
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": false
        },
    }
}